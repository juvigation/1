<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication11.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#0A9A10"
        android:gravity="center"
        android:text="예약 화면 입니다."
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="예약을 위해 아래 이미지를 눌러주세요"
        android:textColor="#0A9A10"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/ImageStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hos" />

</LinearLayout>